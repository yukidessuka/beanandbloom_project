<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/viewreservation.css">
    <title>View Reservations</title>
</head>
<body>
    <!-- Navbar -->
    <div class="top-bar">
        <img src="/img/logo.png" alt="logo" class="top-bar-logo">
        <div class="top-nav">
            <a href="/home" class="nav-link">Home</a>
            <a href="/view-reservation" class="nav-link">View Reservation</a>
        </div>
    </div>

    <!-- Reservation Table Section -->
    <section class="reservation-section">
        <div class="container">
            <h1>Your Reservations</h1>

            <table class="reservation-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Guests</th>
                        <th>Table Type</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% reservations.forEach(reservation => { %>
                    <tr>
                        <td><%= reservation.name %></td>
                        <td><%= reservation.email %></td>
                        <td><%= reservation.people %></td>
                        <td><%= reservation.tableType %></td>
                        <td><%= reservation.date %></td>
                        <td><%= reservation.time %></td>
                        <td>
                            <form action="/delete-reservation/<%= reservation._id %>" method="POST" style="display: inline;">
                                <button type="submit" class="button delete-button">Delete</button>
                            </form>
                            <a href="/edit-reservation/<%= reservation._id %>" class="button">Edit</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
