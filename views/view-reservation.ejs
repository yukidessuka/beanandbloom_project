<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/viewreservation.css">
    <title>Your Reservations</title>
</head>
<body>
    <div class="top-bar">
        <img src="/img/logo.png" alt="logo" class="top-bar-logo">
        <div class="top-nav">
            <a href="/home" class="nav-link">Home</a>
            <a href="/logout" class="nav-link">Logout</a>
        </div>
    </div>

    <h2>Your Reservations</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Table Type</th>
                <th>People</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% reservations.forEach((reservation) => { %>
                <tr>
                    <td><%= reservation.name %></td>
                    <td><%= reservation.date %></td>
                    <td><%= reservation.time %></td>
                    <td><%= reservation.tableType %></td>
                    <td><%= reservation.people %></td>
                    <td>
                        <a href="/edit-reservation/<%= reservation._id %>">Edit</a> |
                        <a href="/delete-reservation/<%= reservation._id %>">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
